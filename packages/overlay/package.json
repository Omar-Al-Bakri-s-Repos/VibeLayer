{
  "name": "@vibelayer/overlay",
  "version": "0.1.0",
  "description": "VibeLayer Overlay - Real-time visual effects and overlay components",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@vibelayer/shared": "workspace:*",
    "pixi.js": "^8.0.0",
    "regl": "^2.1.0",
    "lottie-web": "^5.12.2",
    "@lottiefiles/lottie-interactivity": "^1.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/lottie-web": "^5.7.2",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "typescript": "^5.6.3"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
